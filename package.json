{
	"name": "svelte-valibot-form",
	"version": "0.0.3",
	"description": "A Svelte form validation library using Valibot.",
	"keywords": [
		"svelte",
		"form",
		"validation",
		"valibot",
		"typescript"
	],
	"author": "Matheus Tavares",
	"repository": {
		"type": "git",
		"url": "https://github.com/matheustavarestrindade/svelte-valibot-form"
	},
	"license": "MIT",
	"homepage": "https://github.com/matheustavarestrindade/svelte-valibot-form",
	"bugs": {
		"url": "https://github.com/matheustavarestrindade/svelte-valibot-form/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.2.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^5.0.11"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@sveltejs/kit": "^2.7.3",
		"svelte": "^5.1.3",
		"valibot": "^0.42.1"
	}
}
